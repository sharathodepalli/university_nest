# SendGrid Configuration for UniNest Email Verification
# Copy this file to .env.local and update with your actual values

# SendGrid API Key (Get from SendGrid Dashboard > Settings > API Keys)
# IMPORTANT: Keep this secret and never commit to version control
VITE_SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Your verified sender email address (must be verified in SendGrid)
VITE_FROM_EMAIL=noreply@yourdomain.com

# Test email address for development and testing
VITE_TEST_EMAIL=your-test-email@example.com

# Optional: Custom app name for email templates
VITE_APP_NAME=UniNest

# Optional: Support email for customer inquiries
VITE_SUPPORT_EMAIL=support@yourdomain.com

# Supabase Configuration (if using)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Environment indicator
NODE_ENV=development
